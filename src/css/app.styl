.note {
  padding: 10px;
  margin-top: 10px;
  text-align: left;
  font-size: 14px;
  color: black;
  line-height: 1.3;

  .action {
    //color: $primary;
    cursor: pointer;
  }
}

.inline-action {
  cursor: pointer;
  display: inline-flex;
  //margin-right: 50px;
  font-size: 14px;
  font-weight: 500;
}

.inline-action:hover {
  font-weight: 700;
}

.hcentered {
  display: flex;
  justify-content: center;
}

.noitems-note {
  padding: 10px 10px 10px 10px;
  text-align: center;
  font-size: 14px;
  font-weight: 400;
}

.spinner-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 25px;
  color: $black;

  .label {
    text-size: 12px;
    margin-left: 10px;
  }
}

@media print {
  .noprint {
    display: none;
  }
}

